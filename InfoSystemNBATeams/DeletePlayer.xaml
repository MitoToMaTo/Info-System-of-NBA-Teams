<Window x:Class="InfoSystemNBATeams.DeletePlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoSystemNBATeams"
        mc:Ignorable="d"
        Title="Delete Player" Height="170.301" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="33,31,0,0" TextWrapping="Wrap" Text="Вы уверены, что хотите удалить выбранного игрока?" VerticalAlignment="Top" Height="41" Width="215"/>
        <Button x:Name="yesButton" Content="Да" HorizontalAlignment="Left" Margin="188,9,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="yesButton_Click"/>
        <Button x:Name="noButton" Content="Нет" HorizontalAlignment="Left" Margin="33,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="noButton_Click"/>

    </Grid>
</Window>
