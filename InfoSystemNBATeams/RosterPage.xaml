<Page x:Class="InfoSystemNBATeams.RosterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoSystemNBATeams"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="InfoSystemNBATeams" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="366*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="rosterList" HorizontalAlignment="Left" Height="362" Margin="10,10,0,0" VerticalAlignment="Top" Width="131"/>
        <ListBox x:Name="playerStats" Grid.Column="1" HorizontalAlignment="Left" Height="362" Margin="10,10,0,0" VerticalAlignment="Top" Width="449"/>
        <Button x:Name="showPlayerStats" Content="Статистика" HorizontalAlignment="Left" Height="37" Margin="10,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="131" Click="showPlayerStats_Click"/>
        <Button x:Name="editPlayerStats" Content="Добавить" Grid.Column="1" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Height="37" Click="editPlayerStats_Click"/>
        <Button x:Name="deletePlayer" Content="Удалить" Grid.Column="1" HorizontalAlignment="Left" Margin="128,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96" Height="37" Click="deletePlayer_Click"/>
        <Button x:Name="changePlayerStats" Content="Изменить" Grid.Column="1" HorizontalAlignment="Left" Margin="244,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="93" Height="37" Click="changePlayerStats_Click"/>
        <Button x:Name="goBack" Content="Назад" Grid.Column="1" HorizontalAlignment="Left" Margin="355,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="104" Height="37" Click="goBack_Click"/>

    </Grid>
</Page>
