<Page x:Class="InfoSystemNBATeams.DeletePlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoSystemNBATeams"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="InfoSystemNBATeams">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" FontSize="20" HorizontalAlignment="Left" Margin="108,139,0,0" TextWrapping="Wrap" Text="Вы уверены, что хотите удалить выбранного игрока?" VerticalAlignment="Top" Height="42" Width="496"/>
        <Button x:Name="yesButton" Content="Да" FontSize="20" HorizontalAlignment="Left" Margin="504,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Height="37" RenderTransformOrigin="0.5,0.5" Click="yesButton_Click"/>
        <Button x:Name="noButton" Content="Нет" FontSize="20" HorizontalAlignment="Left" Margin="108,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Height="37" Click="noButton_Click"/>

    </Grid>
</Page>
